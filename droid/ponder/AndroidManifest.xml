<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.oblong.android.ponder"
          android:versionCode="1"
          android:versionName="1.0">

  <application android:label="@string/app_name"
               android:icon="@drawable/icon"
               android:debuggable="true">
        <activity android:name="com.oblong.android.ponder.Ponder"
                  android:label="Ponder"
                  android:screenOrientation="portrait">
          <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
          </intent-filter>
        </activity>

        <activity android:name="com.oblong.android.ponder.ServerDetails"
                  android:label="Ponder - Server details"
                  android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.oblong.android.ponder.PoolDetails"
                  android:label="Ponder - Pool details"
                  android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.oblong.android.ponder.ProteinDetails"
                  android:label="Ponder - Protein details"
                  android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.oblong.android.ponder.Bookmarks"
                  android:label="Ponder - Bookmarks"
                  android:screenOrientation="portrait">
        </activity>

  </application>

  <uses-sdk android:minSdkVersion="8" />

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
  <uses-permission
      android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
  <uses-permission android:name="android.permission.SET_DEBUG_APP" />

</manifest>
