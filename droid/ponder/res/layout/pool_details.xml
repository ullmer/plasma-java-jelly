<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageButton android:id="@+id/pool_goto"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="0"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="5dp"
                 android:layout_alignParentRight="true"
                 android:scaleType="fitEnd"
                 android:background="#000000"
                 android:gravity="right"
                 android:src="@drawable/ic_menu_goto" />

    <TextView android:id="@+id/pool_name_entry"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:layout_alignParentLeft="true"
              android:layout_toLeftOf="@id/pool_goto"
              android:gravity="left"
              android:textSize="18sp"
              android:text="" />

    <TextView android:id="@+id/protein_no"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/pool_name_entry"
              android:layout_alignParentLeft="true"
              android:layout_margin="5dp"
              android:text=""
              android:textSize="12sp" />

    <TextView android:id="@+id/pools_details_caption"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/protein_no"
              android:padding="5dp"
              android:gravity="right"
              android:singleLine="true"
              android:textStyle="italic"
              android:textSize="12sp"
              android:layout_alignParentRight="true"
              android:text="descrips / ingests / size" />

    <TextView android:id="@+id/pools_id_caption"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/protein_no"
              android:layout_toRightOf="@id/pools_id_caption"
              android:layout_alignParentLeft="true"
              android:padding="5dp"
              android:singleLine="true"
              android:textStyle="italic"
              android:textSize="12sp"
              android:text="index" />

    <ListView android:id="@+id/protein_list"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/pools_details_caption"
              android:layout_marginTop="0dp"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp" />

</RelativeLayout>
